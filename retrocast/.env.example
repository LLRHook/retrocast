# Retrocast server environment variables.
# Environment variables always take priority over config file values.
# See also: retrocast.toml.example for config file format.

# Required
DATABASE_URL=postgres://retrocast:password@localhost:5432/retrocast?sslmode=disable
JWT_SECRET=change-me-in-production

# Optional (defaults shown)
REDIS_URL=redis://localhost:6379
SERVER_ADDR=:8080
LOG_LEVEL=info

# MinIO / S3 storage
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=retrocast
MINIO_SECRET_KEY=changeme

# LiveKit voice server
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=devkey
LIVEKIT_API_SECRET=devsecret

# Docker Compose only (not used by the Go server directly)
POSTGRES_PASSWORD=password
MINIO_ROOT_PASSWORD=changeme
